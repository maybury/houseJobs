<%include header.ejs %>
<script src='/javascripts/manageCleanTemplates.js'></script>
<link rel='stylesheet' href='/stylesheets/manageCleans.css' />
</head>
<body>
<% include _adminToolBar.ejs %>
<h1>Clean Templates</h1>
<table class='pull-left'>
	<th>Description</th>
	<th>Tasks</th>
	<% for(var i=0; i<cleanTemplates.length;i++){%>
	<tr class='template-holder'>
		<td><%=cleanTemplates[i].Description%></td>
		<td class='id-holder' style='display:none'><%=cleanTemplates[i]._id%></td>
		<td>
			<%for(var j=0;j<cleanTemplates[i].BaseTasks.length;j++){%>
				<div><%=cleanTemplates[i].BaseTasks[j].Description%></div>
			<%}%>

	<%}%>
</table>
<div class='pull-right'>
	<div>
		<h1>Tasks</h1>
		<%for(var i=0; i<tasks.length;i++){%>
			<div class='task-holder' onclick='templatePage.focusTask($(this))'>
				<div class='id-holder' style='display:none'><%=tasks[i]._id%></div>
				<%=tasks[i].Description%><br />
			</div>
		<%}%>
	</div>
</div>
<div class='clearfix'></div>
<h2>Add Template:</h2>
<label>Description:</label>
<input id="templateDescription" placeholder="enter description"/>
<button class='btn' onclick='templatePage.addTemplate()'>Add Template</button>

<%include footer.ejs %>